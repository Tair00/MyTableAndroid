<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- Основная тема -->
    <style name="Theme.MyTablePr" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Светлая тема -->
    <style name="Theme.MyTablePr.Light" parent="Theme.MyTablePr">
        <!-- Define colors specific to the light theme here -->
    </style>

    <!-- Темная тема -->
    <style name="Theme.MyTablePr.Dark" parent="Theme.MyTablePr">
        <!-- Define colors specific to the dark theme here -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="android:colorAccent">@color/mainColorNight</item>
        <item name="android:colorBackground">@color/backColorNight</item>
    </style>

    <!-- Date Picker Dialog Style -->
    <style name="DatePickerDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#FFCA42</item> <!-- Specify your desired color here -->
    </style>

    <!-- Time Picker Dialog Style -->
    <style name="TimePickerDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:colorControlActivated">@color/mainColor</item>
    </style>
</resources>
